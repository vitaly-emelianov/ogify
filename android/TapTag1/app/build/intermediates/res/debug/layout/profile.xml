<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/va"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/profile_pic" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mel Gibson"
                android:textColor="@color/main_color_cyan_dark"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Actor Director"
                android:textColor="@color/gray_dk"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Los Angeles, USA"
                android:textColor="@color/gray_dk"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/p1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/color_pattern1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                style="@style/lbl_pattern1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21K" />

            <TextView
                android:id="@+id/textView5"
                style="@style/lbl_pattern2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Helped" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/p2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/color_pattern2"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                style="@style/lbl_pattern1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="34" />

            <TextView
                android:id="@+id/textView7"
                style="@style/lbl_pattern2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Helps you" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/p3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/color_pattern3"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView8"
                style="@style/lbl_pattern2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/ic_gear"
                android:text="Settings" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Assigned To Me:"
        android:textColor="@color/main_color_cyan_dark"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/assignToMeList"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"></LinearLayout>


</LinearLayout><!-- From: file:/C:/Users/illus_000/Documents/GitHub/eatfit/android/TapTag1/app/src/main/res/layout/profile.xml -->